@page
@model Affinidi_Login_Demo_App.Pages.IdvModel
@{
    ViewData["Title"] = "Affinidi Identity Verification";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-dark text-white text-center">
                    <h3 class="mb-0">@ViewData["Title"]</h3>
                </div>
                <div class="card-body p-5 text-center">
                    <p class="lead mb-4">Select a method to demonstrate different Identity Verification (IDV) flows.</p>

                    @if (TempData["VpToken"] != null)
                    {
                        <div class="alert alert-success d-flex align-items-center justify-content-center py-4 rounded-3">
                            IDV Token (JSON)
                        </div>
                        <div>
                            <p>@TempData["IdvMessage"]</p>
                            <pre class="bg-light p-3 text-start rounded"
                                style="white-space: pre-wrap; word-break: break-word;">
                                @TempData["VpToken"]
                            </pre>
                        </div>
                    }
                    else
                    {
                        <form method="post">
                            <div class="d-grid gap-3">
                                <button asp-page-handler="VerifyDrivingLicense"
                                    class="btn btn-primary btn-lg w-100" type="submit">
                                    Verify with Driving License
                                </button>
                                <button asp-page-handler="VerifyPassport"
                                    class="btn btn-secondary btn-lg w-100" type="submit">
                                    Verify with Passport
                                </button>
                                <button asp-page-handler="VerifyAnyDocument"
                                    class="btn btn-success btn-lg w-100" type="submit">
                                    Verify with Any Document (Passport/DL)
                                </button>
                            </div>
                        </form>
                    }
                </div>
            </div>
        </div>
    </div>
</div>