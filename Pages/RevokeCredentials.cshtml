@page
@model Affinidi_Login_Demo_App.Pages.RevokeCredentialsModel
@{
    ViewData["Title"] = "Revoke Credentials";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-dark text-white text-center">
                    <h3 class="mb-0">@ViewData["Title"]</h3>
                </div>
                <div class="card-body p-5">
                    <p class="lead mb-4 text-center">Enter the Issuance ID and a reason to revoke the credential.</p>

                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        @if (TempData["SuccessMessage"] != null)
                        {
                            <div class="alert alert-success">@TempData["SuccessMessage"]</div>
                        }
                        <div class="form-floating mb-3">
                            <input asp-for="IssuanceId" class="form-control" placeholder="Issuance ID" />
                            <label asp-for="IssuanceId"></label>
                            <span asp-validation-for="IssuanceId" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-3">
                            <select asp-for="RevocationReason" class="form-select">
                                <option value="">Select Reason</option>
                                <option value="INVALID_CREDENTIAL">INVALID_CREDENTIAL</option>
                                <option value="COMPROMISED_ISSUER">COMPROMISED_ISSUER</option>
                            </select>
                            <label asp-for="RevocationReason"></label>
                            <span asp-validation-for="RevocationReason" class="text-danger"></span>
                        </div>
                        <div class="d-grid">
                            <button class="btn btn-danger btn-lg" type="submit">Revoke Credential</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>