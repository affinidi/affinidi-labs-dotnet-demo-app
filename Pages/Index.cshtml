@page
@model IndexModel
@{
    ViewData["Title"] = "Affinidi Reference App";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />

<style>
    body {
        background: linear-gradient(135deg, #e9ecef 0%, #f8fafc 100%);
    }
    .card {
        border-radius: 18px;
        box-shadow: 0 8px 24px rgba(44, 62, 80, 0.08);
        border: none;
    }
    .card-body {
        padding: 2.5rem 2rem;
    }
    .display-5 {
        font-weight: 700;
        color: #1a2940;
        letter-spacing: 1px;
    }
    .lead {
        color: #34495e;
    }

    .fw-bold {
        color: #0077b6;
    }
    .affinidi-logo {
        width: 120px;
        margin-bottom: 1.5rem;
    }

    .navbar1 {
        background: #f4f6fb !important;
        border-radius: 12px;
        box-shadow: 0 2px 8px rgba(44, 62, 80, 0.05);
    }

    .nav-link1 {
        font-size: 1.1rem;
        color: #2c3e50 !important;
        background: #eaf0fa;
        border-radius: 8px;
        margin-bottom: 6px;
        transition: background 0.2s, color 0.2s;
        padding: 0.75rem 1rem;
        text-decoration: none;
    }
    .nav-link1:hover {
        background: #d0e2ff;
        color: #0077b6 !important;
        text-decoration: none;
    }
</style>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0">
                <div class="card-body text-center">
                    <img src="~/images/logo.jpg" alt="Affinidi Logo" class="affinidi-logo" />
                    <h2 class="display-5 mb-4">Dotnet 8.0 Reference Implementation</h2>
                    <div class="mb-4">
                        <p class="lead mb-2"><b>Click on Login to Experience Affinidi Login</b></p>
                    </div>
                    <p class="fw-bold mb-4">
                        Learn more about <a href="https://docs.affinidi.com/docs" target="_blank" style="color:#0077b6;">Affinidi Products and Services <i class="bi bi-box-arrow-up-right"></i></a>.
                    </p>
                    <nav class="navbar1 navbar-expand-lg rounded mb-4">
                        <div class="container-fluid justify-content-center">
                            <ul class="navbar-nav flex-column align-items-center w-100">
                                <li class="nav-item my-2 w-75">
                                    <a class="nav-link1 fw-bold w-100 text-center d-flex align-items-center justify-content-center" href="/CredentialIssuance">
                                        <i class="bi bi-award me-2"></i>
                                        <span>Affinidi Credential Issuance Service</span>
                                    </a>
                                </li>
                                <li class="nav-item my-2 w-75">
                                    <a class="nav-link1 fw-bold w-100 text-center d-flex align-items-center justify-content-center" href="/Iota">
                                        <i class="bi bi-diagram-3 me-2"></i>
                                        <span>Affinidi Iota Framework</span>
                                    </a>
                                </li>
                                <li class="nav-item my-2 w-75">
                                    <a class="nav-link1 fw-bold w-100 text-center d-flex align-items-center justify-content-center" href="/CredentialVerification">
                                        <i class="bi bi-shield-check me-2"></i>
                                        <span>Affinidi Credential Verification</span>
                                    </a>
                                </li>
                                <li class="nav-item my-2 w-75">
                                    <a class="nav-link1 fw-bold w-100 text-center d-flex align-items-center justify-content-center" href="/IDV">
                                        <i class="bi bi-person-badge me-2"></i>
                                        <span>Affinidi Identity Verification</span>
                                    </a>
                                </li>
                                <li class="nav-item my-2 w-75">
                                    <a class="nav-link1 fw-bold w-100 text-center d-flex align-items-center justify-content-center" href="/RevokeCredentials">
                                        <i class="bi bi-x-circle me-2"></i>
                                        <span>Affinidi Revoke Credentials</span>
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>
