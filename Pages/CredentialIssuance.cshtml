@page
@model Affinidi_Login_Demo_App.Pages.CredentialIssuanceModel
@{
    ViewData["Title"] = "Credential Issuance Service";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />
    <style>
        body {
            background-color: #f0f2f5;
        }

        .card {
            border-radius: 15px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .card-header {
            border-top-left-radius: 15px;
            border-top-right-radius: 15px;
            background-color: #343a40 !important;
        }

        .btn-credential {
            transition: all 0.3s ease;
            font-weight: 500;
        }

            .btn-credential:hover {
                transform: translateY(-3px);
                box-shadow: 0 4px 6px rgba(0, 0, 0, 0.2);
            }

        .form-check-label {
            margin-left: 10px;
            font-weight: 500;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card shadow-lg border-0">
                    <div class="card-header bg-dark text-white text-center py-4">
                        <h3 class="mb-0">@ViewData["Title"]</h3>
                    </div>
                    <div class="card-body p-5 text-center">
                        @if (TempData["IssuanceId"] != null)
                        {
                            <div class="alert alert-success d-flex align-items-center justify-content-center py-4 rounded-3">
                                <i class="bi bi-check-circle-fill me-2 fs-4"></i>
                                <div>
                                    <h4 class="mb-0 fw-bold">Credential Offer Ready!</h4>
                                    <p>@TempData["IssuanceMessage"]</p>
                                </div>
                            </div>

                            <div class="text-start mt-4 bg-light p-4 rounded-3">
                                <h5 class="fw-bold mb-3">Offer Details:</h5>
                                <div class="mb-3">
                                    <strong>Offer URL:</strong>
                                    <p class="border p-2 bg-white text-break rounded-3">@TempData["CredentialOfferUri"]</p>
                                </div>
                                <div class="mb-3">
                                    <strong>Transaction Code:</strong>
                                    <p class="border p-2 bg-white rounded-3">@TempData["TxCode"]</p>
                                </div>
                                <div class="mb-0">
                                    <strong>Issuance ID:</strong>
                                    <p class="border p-2 bg-white text-break rounded-3">@TempData["IssuanceId"]</p>
                                </div>
                            </div>

                            <div class="d-flex justify-content-center gap-3 mt-4">
                                @if (TempData["ClaimUrl"] != null)
                                {
                                    <a href="@TempData["ClaimUrl"]" class="btn btn-success btn-lg btn-credential" target="_blank" rel="noopener noreferrer">
                                        <i class="bi bi-check2 me-2"></i>Claim Offer
                                    </a>
                                }
                                <a href="/CredentialIssuance" class="btn btn-secondary btn-lg btn-credential">Return Back</a>
                            </div>

                            <hr class="my-5" />

                            <div class="text-start bg-light p-4 rounded-3 mt-4">
                                <div class="d-flex align-items-center mb-3">
                                    <i class="bi bi-info-circle-fill me-2 fs-4"></i>
                                    <div>
                                        <h4 class="mb-0 fw-bold">Credential Status</h4>
                                    </div>
                                </div>
                                @if (TempData["IssuanceMessage"] != null)
                                {
                                    <div class="alert alert-info fw-semibold mb-4" style="font-size: 1.1rem;">
                                        @TempData["IssuanceMessage"]
                                    </div>
                                }
                                <form method="post" class="mb-0">
                                    <div class="mb-3">
                                        <label for="statusIssuanceId" class="form-label fw-semibold" style="font-size: 1.1rem;">Issuance ID</label>
                                        <input
                                            type="text"
                                            class="form-control form-control-lg rounded-3 fw-normal"
                                            style="font-size: 1.1rem;"
                                            id="statusIssuanceId"
                                            name="StatusIssuanceId"
                                            value="@Model.StatusIssuanceId"
                                            placeholder="Enter Issuance ID to check status"
                                            required />
                                    </div>
                                    <button asp-page-handler="CheckCredentialStatus" class="btn btn-primary btn-lg btn-credential w-100" type="submit">Check Credential Status</button>
                                </form>
                            </div>
                        }
                        else
                        {
                            <p class="lead mb-4">Select a credential type to issue. Check the box to make it revocable and/or set an expiry.</p>
                            <form method="post">
                                <div class="d-grid gap-3">
                                    <div class="input-group">
                                        <div class="input-group-text p-3">
                                            <input class="form-check-input mt-0" type="checkbox" name="revocablePersonalInfo" value="true">
                                            <span class="ms-2">Revocable</span>
                                            <input class="form-check-input mt-0 ms-3" type="checkbox" name="expiryPersonalInfo" value="true">
                                            <span class="ms-2">Expiry</span>
                                        </div>
                                        <button asp-page-handler="IssuePersonalInfo" class="btn btn-success btn-lg btn-credential w-100" type="submit">Issue Personal Info Credential</button>
                                    </div>
                                    <div class="input-group">
                                        <div class="input-group-text p-3">
                                            <input class="form-check-input mt-0" type="checkbox" name="revocableEducation" value="true">
                                            <span class="ms-2">Revocable</span>
                                            <input class="form-check-input mt-0 ms-3" type="checkbox" name="expiryEducation" value="true">
                                            <span class="ms-2">Expiry</span>
                                        </div>
                                        <button asp-page-handler="IssueEducation" class="btn btn-success btn-lg btn-credential w-100" type="submit">Issue Education Credential</button>
                                    </div>
                                    <div class="input-group">
                                        <div class="input-group-text p-3">
                                            <input class="form-check-input mt-0" type="checkbox" name="revocableEmployment" value="true">
                                            <span class="ms-2">Revocable</span>
                                            <input class="form-check-input mt-0 ms-3" type="checkbox" name="expiryEmployment" value="true">
                                            <span class="ms-2">Expiry</span>
                                        </div>
                                        <button asp-page-handler="IssueEmployment" class="btn btn-success btn-lg btn-credential w-100" type="submit">Issue Employment Credential</button>
                                    </div>
                                    <div class="input-group">
                                        <div class="input-group-text p-3">
                                            <input class="form-check-input mt-0" type="checkbox" name="revocableResidence" value="true">
                                            <span class="ms-2">Revocable</span>
                                            <input class="form-check-input mt-0 ms-3" type="checkbox" name="expiryResidence" value="true">
                                            <span class="ms-2">Expiry</span>
                                        </div>
                                        <button asp-page-handler="IssueResidence" class="btn btn-success btn-lg btn-credential w-100" type="submit">Issue Residence Credential</button>
                                    </div>
                                    <div class="input-group">
                                        <div class="input-group-text p-3">
                                            <input class="form-check-input mt-0" type="checkbox" name="revocableBatch" value="true">
                                            <span class="ms-2">Revocable</span>
                                            <input class="form-check-input mt-0 ms-3" type="checkbox" name="expiryBatch" value="true">
                                            <span class="ms-2">Expiry</span>
                                        </div>
                                        <button asp-page-handler="IssueBatch" class="btn btn-info btn-lg btn-credential text-dark w-100" type="submit">Issue Batch Credential</button>
                                    </div>
                                    <div class="input-group">
                                        <div class="input-group-text p-3">
                                            <input class="form-check-input mt-0" type="checkbox" name="revocableCustom" value="true">
                                            <span class="ms-2">Revocable</span>
                                            <input class="form-check-input mt-0 ms-3" type="checkbox" name="expiryCustom" value="true">
                                            <span class="ms-2">Expiry</span>
                                        </div>
                                        <button asp-page-handler="IssueCustom" class="btn btn-info btn-lg btn-credential text-dark w-100" type="submit">Issue Custom Credential</button>
                                    </div>
                                </div>
                            </form>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script>
        // Auto-fill StatusIssuanceId with IssuanceId if available
        document.addEventListener("DOMContentLoaded", function () {
            var issuanceIdElem = document.querySelector(".text-start.bg-light .mb-0 .border");
            var statusInput = document.getElementById("statusIssuanceId");
            if (issuanceIdElem && statusInput && statusInput.value === "") {
                var issuanceId = issuanceIdElem.textContent.trim();
                if (issuanceId && issuanceId.length > 0) {
                    statusInput.value = issuanceId;
                }
            }
        });
    </script>
</body>
</html>
